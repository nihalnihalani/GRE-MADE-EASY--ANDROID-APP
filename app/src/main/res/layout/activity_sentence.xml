<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/grebackground"
    tools:context="com.boredbees.gre2k17.Sentence">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTimer4"
                android:textAlignment="center"
                android:textColor="?attr/colorAccent"
                android:textSize="20sp"
                android:background="@android:color/transparent" />

            <TextView
                android:text="Select only two Equivalent Answers"
                android:textSize="22dp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <TextView
                android:text="The short,stocky shopheeper,who was feautured on the evening news wearing a striped buisness suit,expressed his _______whoever vandalized about what he would do in retalliation if the vandals were ever caught"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="#FFFFFF"
                android:id="@+id/textView3"
                android:layout_marginTop="30dp" />
            <CheckBox
                android:text="Choice6"
                android:textSize="22dp"
                android:buttonTint="#FFFFFF"
                android:layout_width="match_parent"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox6"
                android:layout_marginTop="60dp"
                android:checked="true" />

            <CheckBox
                android:text="Choice5"
                android:buttonTint="#FFFFFF"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:id="@+id/checkBox5"
                android:layout_marginTop="22dp" />

            <CheckBox
                android:text="Choice4"
                android:buttonTint="#FFFFFF"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:id="@+id/checkBox4"
                android:layout_marginTop="22dp" />

            <CheckBox
                android:text="Choice3"
                android:textSize="22dp"
                android:buttonTint="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:id="@+id/checkBox3"
                android:layout_marginTop="22dp" />

            <CheckBox
                android:text="Choice2"
                android:textSize="22dp"
                android:buttonTint="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:id="@+id/checkBox2"
                android:layout_marginTop="22dp" />

            <CheckBox
                android:text="Choice1"
                android:textSize="22dp"
                android:buttonTint="#FFFFFF"
                android:layout_width="match_parent"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:layout_marginTop="22dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton9"
                android:background="@android:color/transparent"
                android:src="@drawable/white"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="110dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
