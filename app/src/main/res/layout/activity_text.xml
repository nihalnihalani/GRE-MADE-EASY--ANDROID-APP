<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/grebackground"
    tools:context="com.boredbees.gre2k17.Text">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTimer2"
                android:textAlignment="center"
                android:textColor="?attr/colorAccent"
                android:textSize="20sp"
                android:background="@android:color/transparent" />

            <TextView
                android:text="For each blank select one Answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:id="@+id/textView" />

            <TextView
                android:text="The artist was deeply influenced by impression even while he sought to (1)__________ it.Like his predeccors he eschewedstaid realism in favour of temporal subjective perceptions but he rejected the offer impression (2)_________ color Instead he adopted one of the style that realized on a small precise points of paint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:id="@+id/textView2"
                android:layout_marginTop="30dp" />
            <TextView
                android:text="Blank 1"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:layout_marginTop="20dp" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:id="@+id/rgroup1">

                <RadioButton
                    android:text="choice1"
                    android:textSize="22dp"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton21"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="choice2"
                    android:textSize="22dp"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton20"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="choice3"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:buttonTint="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton19"
                    android:layout_weight="1" />
            </RadioGroup>
            <TextView
                android:text="Blank 2"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:layout_marginTop="30dp" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/rgroup2">

                <RadioButton
                    android:text="choice1"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:buttonTint="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton24"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="choice2"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:buttonTint="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton23"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="choice3"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:buttonTint="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton22"
                    android:layout_weight="1" />
            </RadioGroup>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton10"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/white"
                android:background="@android:color/transparent" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
